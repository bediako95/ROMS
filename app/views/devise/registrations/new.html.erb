<h2 style="font-size: 40px; margin-bottom: 50px; color: #f70b0b">INFORTECH <span style="color: #1ab394; font-weight: 900">Solutions</span></h2>


<% if notice %>
    <div class="alert alert-info">
      <strong>Notice!</strong> <%= notice %>
    </div>
<% end %>

<% if alert %>
    <div class="alert alert-danger">
      <strong>Alert!</strong> <%= alert %>
    </div>
<% end %>



<div class="ibox-content">
<h3 style="margin-bottom: 40px;">Sign Up</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group m-t">
        <%= f.email_field :email,:placeholder=>"Email", :class=>"form-control", autofocus: true %>
      </div>

  <div class="form-group">
   
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password,:placeholder=>"Password", :class=>"form-control", autofocus: true ,autocomplete: "new-password" %>
  </div>

  <div class="field">
    
  <%= f.password_field :password,:placeholder=>"Password Confirmation", :class=>"form-control", autofocus: true ,autocomplete: "new-password" %>
  </div>
<br/>
  <div class="actions">
  <%= f.submit "Sign Up", :class => "btn btn-primary block full-width m-b" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<div/>
